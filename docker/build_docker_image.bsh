#!/usr/bin/env bash
set -eu
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
echo "DIR=${DIR}"
if [ "$#" -gt "0"  ] && [ "$1" == "--cpu-only" ]; then
  PIX2FACE_IMAGE=pix2face_cpu
else
  PIX2FACE_IMAGE=pix2face
fi
echo "Building $PIX2FACE_IMAGE"
docker-compose -f ${DIR}/docker-compose.yml build ${PIX2FACE_IMAGE}
