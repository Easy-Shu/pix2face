#!/usr/bin/env bash
set -eu

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
echo "DIR=${DIR}"
PIX2FACE_SUPER_DIR="$(readlink -f ${DIR}/../)"

if [ "$#" -gt "0"  ] && [ "$1" == "--gpu" ]; then
  PIX2FACE_IMAGE=pix2face-gpu
else
  PIX2FACE_IMAGE=pix2face
fi

docker-compose -f ${DIR}/docker-compose.yml run --rm $PIX2FACE_IMAGE /pix2face_super/docker/scripts/build_face3d.bsh
