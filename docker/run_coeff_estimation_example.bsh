#!/usr/bin/env bash

# fail if inputs don't exist
set -eu

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ "$#" -gt "0"  ] && [ "$1" == "--gpu" ]; then
  PIX2FACE_IMAGE=pix2face-gpu
else
  PIX2FACE_IMAGE=pix2face
fi

docker-compose -f ${DIR}/docker-compose.yml run --rm ${PIX2FACE_IMAGE} python /pix2face_super/scripts/estimate_coeffs_example.py
